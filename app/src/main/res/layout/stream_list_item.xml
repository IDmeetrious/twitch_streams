<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/stream_list_item_iv"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="VideoImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/stream_list_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:text="Game Title"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/stream_list_item_iv"
            app:layout_constraintTop_toTopOf="@+id/stream_list_item_iv" />

        <TextView
            android:id="@+id/stream_list_item_channels_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="10"
            app:layout_constraintStart_toEndOf="@+id/stream_list_item_channels"
            app:layout_constraintTop_toBottomOf="@+id/stream_list_item_title_tv" />

        <TextView
            android:id="@+id/stream_list_item_views_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="999"
            app:layout_constraintStart_toEndOf="@+id/stream_list_item_viewers"
            app:layout_constraintStart_toStartOf="@+id/stream_list_item_channels_tv"
            app:layout_constraintTop_toBottomOf="@+id/stream_list_item_channels_tv" />

        <TextView
            android:id="@+id/stream_list_item_channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="channels:"
            app:layout_constraintStart_toEndOf="@+id/stream_list_item_iv"
            app:layout_constraintTop_toBottomOf="@+id/stream_list_item_title_tv" />

        <TextView
            android:id="@+id/stream_list_item_viewers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="viewers:"
            app:layout_constraintStart_toStartOf="@+id/stream_list_item_channels"
            app:layout_constraintTop_toBottomOf="@+id/stream_list_item_channels" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>