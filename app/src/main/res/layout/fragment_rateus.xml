<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/fragment_rateus_star_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_star_border_24"
        app:layout_constraintEnd_toStartOf="@+id/fragment_rateus_star_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_rateus_title_tv" />

    <ImageButton
        android:id="@+id/fragment_rateus_star_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_star_border_24"
        app:layout_constraintEnd_toStartOf="@+id/fragment_rateus_star_three"
        app:layout_constraintStart_toEndOf="@+id/fragment_rateus_star_one"
        app:layout_constraintTop_toTopOf="@+id/fragment_rateus_star_one" />

    <ImageButton
        android:id="@+id/fragment_rateus_star_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_star_border_24"
        app:layout_constraintEnd_toStartOf="@+id/fragment_rateus_star_four"
        app:layout_constraintStart_toEndOf="@+id/fragment_rateus_star_two"
        app:layout_constraintTop_toTopOf="@+id/fragment_rateus_star_two" />

    <ImageButton
        android:id="@+id/fragment_rateus_star_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_star_border_24"
        app:layout_constraintEnd_toStartOf="@+id/fragment_rateus_star_five"
        app:layout_constraintStart_toEndOf="@+id/fragment_rateus_star_three"
        app:layout_constraintTop_toTopOf="@+id/fragment_rateus_star_three" />

    <ImageButton
        android:id="@+id/fragment_rateus_star_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:background="#00FFFFFF"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_star_border_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_rateus_star_four"
        app:layout_constraintTop_toTopOf="@+id/fragment_rateus_star_four" />

    <Button
        android:id="@+id/fragment_rateus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine" />

    <TextView
        android:id="@+id/fragment_rateus_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Please send your feedback"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextTextMultiLine"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:ems="300"
        android:hint="Message..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_rateus_star_one">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minLines="5" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

